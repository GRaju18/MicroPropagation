<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog id="changeLocation" contentWidth="23rem" class="sapUiSizeCompact iconDialog waterDialog" stretch="{device>/system/phone}">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="{i18n>ChangeLocation}"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<FlexBox direction="Column">
				<InputListItem label="{i18n>SelectLocation}">
					<Select id="location" width="12rem" items="{path: 'jsonModel>/ChangeLocationData' ,sorter : { path : 'key', descending : false }}"
						forceSelection="false">
						<core:Item key="{jsonModel>key}" text="{jsonModel>key} - {jsonModel>text}"/>
					</Select>
				</InputListItem>
			</FlexBox>
		</content>
		<beginButton>
			<Button type="Emphasized" text="{i18n>Ok}" press="onChangeLocation"></Button>
		</beginButton>
		<endButton>
			<Button type="Transparent" text="{i18n>Cancel}" press="onChangeLocationClose"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>