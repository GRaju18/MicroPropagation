<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog id="cloneChangeGrowthPhase" contentWidth="28rem" class="sapUiSizeCompact iconDialog waterDialog" stretch="{device>/system/phone}">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="{i18n>ChangeGrowthPhase}"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<FlexBox direction="Column">
				<InputListItem label="No. of plants">
					<Input id="avalQty" editable="false" width="15rem"/>
				</InputListItem>
				<InputListItem label="{i18n>SelectGrowthPhase}">
					<Select id="growthPhase" width="15rem" selectedKey="{jsonModel>/cgPhase}" forceSelection="false" editable="false">
						<core:Item key="Vegetative" text="Vegetative"/>
						<core:Item key="Flower" text="Flower"/>
					</Select>
				</InputListItem>
				<InputListItem label="{i18n>SelectLocation}" visible="{= ${jsonModel>/cgPhase} === 'Vegetative'}">
					<Select id="location" width="15rem" items="{path: 'jsonModel>/CloneCGVegList', sorter : { path : 'key', descending : false }}"
						forceSelection="false">
						<core:Item key="{jsonModel>key}" text="{jsonModel>key} - {jsonModel>text}"/>
					</Select>
				</InputListItem>
				<InputListItem label="{i18n>Date}">
					<DatePicker id="mDate" displayFormat="yyyy-MM-dd" width="15rem"/>
				</InputListItem>
			</FlexBox>
		</content>
		<beginButton>
			<Button type="Emphasized" text="{i18n>Ok}" press="cloneChageGrowthPhase"></Button>
		</beginButton>
		<endButton>
			<Button type="Transparent" text="{i18n>Cancel}" press="cloneChangeGrowthPhaseClose"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>