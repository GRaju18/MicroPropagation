<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:barcode="com.9b.MicroPropagation.control">
	<Dialog id="createSeedling" contentWidth="28rem" class="sapUiSizeCompact iconDialog waterDialog" stretch="{device>/system/phone}">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="Create Seedling"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<FlexBox direction="Column">
				<FlexBox direction="Column">
					<InputListItem label="{i18n>SelectStrain}">
						<Select id="strain" width="15rem" items="{path: 'jsonModel>/strainList', sorter:{ path : 'U_NSTNM', descending : false } }"
							forceSelection="false" selectedKey="{jsonModel>/cCloneData/sStrain}" change="onChangeStrain">
							<core:Item key="{jsonModel>U_NSTNM}" text="{jsonModel>U_NSTNM}"/>
						</Select>
					</InputListItem>
					<InputListItem label="Batch">
						<Select id="batch" width="15rem" items="{path: 'jsonModel>/allBatchData'}" forceSelection="false"
							selectedKey="{jsonModel>/cCloneData/sBatch}" change="onChangeBatch">
							<items>
								<core:Item key="{jsonModel>BatchNum}" text="{jsonModel>BatchNum}"/>
							</items>
						</Select>
					</InputListItem>
					<InputListItem label="Available Quantity">
						<Input id="avlQty" width="15rem" editable="false" value="{jsonModel>/cCloneData/avlQty}"/>
					</InputListItem>
					<InputListItem label="{i18n>EnterQuantity}">
						<Input id="eQty" width="15rem" liveChange="onChangeQuantity" value="{jsonModel>/cCloneData/sQty}"/>
					</InputListItem>
					<InputListItem label="{i18n>Date}">
						<DatePicker
							value="{path:'jsonModel>/cCloneData/sDate', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true, 'pattern': 'yyyy-MM-dd'}}"
							width="15rem"/>
					</InputListItem>
					<!--<InputListItem label="{i18n>Location}">-->
					<!--	<Select id="location" width="15rem" items="{path: 'jsonModel>/createSeedlings' ,sorter : { path : 'key', descending : false }}"-->
					<!--		forceSelection="false" selectedKey="{jsonModel>/cCloneData/sLocation}">-->
					<!--		<items>-->
					<!--			<core:Item key="{jsonModel>key}" text="{jsonModel>key} - {jsonModel>text}"/>-->
					<!--		</items>-->
					<!--	</Select>-->
					<!--</InputListItem>-->
				</FlexBox>
			</FlexBox>
		</content>
		<beginButton>
			<Button type="Emphasized" text="{i18n>Create}" press="onSeedlingCreate"/>
		</beginButton>
		<endButton>
			<Button type="Transparent" text="{i18n>Close}" press="onSeedlingClose" tooltip="Close"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>