<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:barcode="com.9b.clonePlanner2.control">
	<Dialog id="createClone" contentWidth="28rem" class="sapUiSizeCompact iconDialog waterDialog" stretch="{device>/system/phone}">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="Create Cuttings"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<FlexBox direction="Column">
				<FlexBox direction="Column">
					<InputListItem label="Plant ID">
						<!--<Select id="mPlant" width="15rem" items="{path: 'jsonModel>/motherPlantData',sorter : { path : 'U_NSTNM', descending : false } }"-->
						<!--	forceSelection="false" selectedKey="{jsonModel>/sCloneData/sMotherPlant}">-->
						<!--	<core:Item key="{jsonModel>BatchNum}" text="{jsonModel>BatchNum} - {jsonModel>strainValue}"/>-->
						<!--</Select>-->
						<Input id="batchID" width="15rem" value="" editable="false"/>
					</InputListItem>
					<InputListItem label="{i18n>EnterQuantity}">
						<Input id="eQty" width="15rem" liveChange="onChangeQuantity" value="{jsonModel>/sCloneData/sQty}"/>
					</InputListItem>
					<InputListItem label="{i18n>Date}">
						<DatePicker
							value="{path:'jsonModel>/sCloneData/sDate', type:'sap.ui.model.type.Date', formatOptions: { style: 'medium', strictParsing: true, 'pattern': 'yyyy-MM-dd'}}"
							width="15rem"/>
					</InputListItem>
					<InputListItem label="{i18n>Location}">
						<Select id="location" width="15rem" items="{path: 'jsonModel>/createCloneLocation' ,sorter : { path : 'key', descending : false }}"
							forceSelection="false" selectedKey="{jsonModel>/sCloneData/sLocation}">
							<items>
								<core:Item key="{jsonModel>key}" text="{jsonModel>key} - {jsonModel>text}"/>
							</items>
						</Select>
					</InputListItem>
				</FlexBox>
			</FlexBox>
		</content>
		<beginButton>
			<Button type="Emphasized" text="{i18n>Create}" press="onCuttingsCreate"/>
		</beginButton>
		<endButton>
			<Button type="Transparent" text="{i18n>Close}" press="onCuttingsClose" tooltip="Close"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>