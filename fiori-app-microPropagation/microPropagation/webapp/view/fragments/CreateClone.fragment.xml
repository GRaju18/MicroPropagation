<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:barcode="com.9b.clonePlanner2.control">
	<Dialog id="createClone" draggable="true" contentWidth="28rem" class="sapUiSizeCompact iconDialog waterDialog"
		stretch="{device>/system/phone}">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="Mark As Clone"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<FlexBox direction="Column">
				<FlexBox direction="Column">
					<InputListItem label="No. of plants">
						<Input id="avalQty" editable="false" width="15rem"/>
					</InputListItem>
					<InputListItem label="Item">
						<Select id="Item" width="15rem" items="{path: 'jsonModel>/CloneItemsList'}" forceSelection="false" editable="false">
							<items>
								<core:Item key="{jsonModel>ItemCode}" text="{jsonModel>ItemName}"/>
							</items>
						</Select>
					</InputListItem>
					<InputListItem label="Phase">
						<Select id="phase" width="15rem" forceSelection=" false">
							<items>
								<core:Item key="Mother" text="Mother"/>
								<core:Item key="Clone" text="Cultivation"/>
								<core:Item key="" text="Clone Cultivation"/>
							</items>
						</Select>
					</InputListItem>
					<InputListItem label="Location">
						<Select id="location" width="17rem" items="{path: 'jsonModel>/createCloneLocationList', sorter : { path : 'key', descending : false }}"
							forceSelection="true" editable="false">
							<core:Item key="{jsonModel>key}" text="{jsonModel>key} - {jsonModel>text}"/>
						</Select>
					</InputListItem>
					<InputListItem label="{i18n>Date}">
						<DatePicker id="mDate" displayFormat="yyyy-MM-dd" width="15rem"/>
					</InputListItem>
				</FlexBox>
			</FlexBox>
		</content>
		<beginButton>
			<Button type="Emphasized" text="{i18n>Create}" press="onCloneCreate"/>
		</beginButton>
		<endButton>
			<Button type="Transparent" text="{i18n>Close}" press="onCloneClose" tooltip="Close"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>