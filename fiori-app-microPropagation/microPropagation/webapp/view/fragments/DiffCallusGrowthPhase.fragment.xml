<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<Dialog id="diffCallusGrowthPhase" contentWidth="28rem" class="sapUiSizeCompact iconDialog waterDialog" stretch="{device>/system/phone}"
		draggable="true">
		<customHeader>
			<Bar>
				<contentMiddle>
					<Label text="{i18n>ChangeGrowthPhase}"/>
				</contentMiddle>
			</Bar>
		</customHeader>
		<content>
			<FlexBox direction="Column">
				<InputListItem label="No. of plants">
					<Input id="avalQty" editable="false" width="17rem"/>
				</InputListItem>
				<InputListItem label="Growth Phase">
					<Select id="growthPhase" width="17rem" forceSelection="true" editable="false">
						<core:Item key="DIFF Callus" text="DIFF Callus"/>
					</Select>
				</InputListItem>
				<InputListItem label="Item">
					<Select id="Item" width="17rem" items="{path: 'jsonModel>/DiffCalluseItemsList'}" forceSelection="false" editable="false">
						<items>
							<core:Item key="{jsonModel>ItemCode}" text="{jsonModel>ItemName}"/>
						</items>
					</Select>
				</InputListItem>
				<InputListItem label="Location">
					<Select id="location" width="17rem" items="{path: 'jsonModel>/DifCallusLocationList', sorter : { path : 'key', descending : false }}"
						forceSelection="true" editable="false">
						<core:Item key="{jsonModel>key}" text="{jsonModel>key} - {jsonModel>text}"/>
					</Select>
				</InputListItem>
				<InputListItem label="{i18n>Date}">
					<DatePicker id="mDate" displayFormat="yyyy-MM-dd" width="17rem"/>
				</InputListItem>
			</FlexBox>
		</content>
		<beginButton>
			<Button type="Emphasized" text="{i18n>Ok}" press="DiffCallusGrowthPhase"></Button>
		</beginButton>
		<endButton>
			<Button type="Transparent" text="{i18n>Cancel}" press="DiffCalluseClose"></Button>
		</endButton>
	</Dialog>
</core:FragmentDefinition>